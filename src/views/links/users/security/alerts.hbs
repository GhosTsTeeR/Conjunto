                                            <div class="card">
                                                <div class="card-body">
                                                    <label for="Tipo">Boton del panico: </label>
                                                    <br>
                                                    <button style="width: 200px; height: 200px; border-radius: 100px;background: rgb(240, 78, 28);">Panic</button>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
